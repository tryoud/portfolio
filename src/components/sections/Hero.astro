---
const { site } = Astro.props;
---
<section class="mb-16">
  <p class="text-sm text-zinc-500">{site.location}</p>
  <h1 class="mt-3 text-4xl font-semibold tracking-tight">{site.name}</h1>
  <p class="mt-2 text-lg text-zinc-700">{site.role}</p>
  <p class="mt-6 max-w-2xl text-zinc-600">{site.tagline}</p>

  <div class="mt-8 flex flex-wrap gap-3">
    <a class="rounded-xl border px-4 py-2 text-sm hover:bg-zinc-50" href={site.links.github}>GitHub</a>
    <a class="rounded-xl border px-4 py-2 text-sm hover:bg-zinc-50" href={site.links.linkedin}>LinkedIn</a>
    <a class="rounded-xl border px-4 py-2 text-sm hover:bg-zinc-50" href={site.links.email}>Email</a>
  </div>
</section>
