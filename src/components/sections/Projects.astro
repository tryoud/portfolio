---
const { site } = Astro.props;
const projects = site.projects ?? [];
---
<section id="work" class="py-20" aria-labelledby="work-heading">
  <h2 id="work-heading" class="text-2xl font-semibold tracking-tight text-zinc-900">Work</h2>
  <div class="mt-10 grid gap-8 sm:grid-cols-2">
    {projects.map((p) => (
      <article class="flex flex-col rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm transition-shadow hover:shadow-md focus-within:ring-2 focus-within:ring-zinc-400 focus-within:ring-offset-2">
        <h3 class="text-lg font-semibold text-zinc-900">{p.title}</h3>
        <p class="mt-3 text-base text-zinc-600">{p.description}</p>
        {p.impact?.length ? (
          <ul class="mt-4 space-y-2">
            {p.impact.map((i) => (
              <li class="flex items-start gap-3 text-sm text-zinc-600">
                <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-400" aria-hidden="true" />
                <span>{i}</span>
              </li>
            ))}
          </ul>
        ) : null}
        <div class="mt-4 flex flex-wrap gap-2">
          {p.stack?.map((s) => (
            <span class="rounded-full border border-zinc-200 bg-zinc-50 px-2.5 py-1 text-xs font-medium text-zinc-600">
              {s}
            </span>
          ))}
        </div>
        <a
          href={p.href}
          class="mt-6 inline-flex w-fit rounded-lg border border-zinc-200 bg-white px-5 py-2.5 text-sm font-medium text-zinc-700 transition-colors hover:bg-zinc-50 focus:outline-none focus:ring-2 focus:ring-zinc-400 focus:ring-offset-2"
        >
          View
        </a>
      </article>
    ))}
  </div>
</section>
